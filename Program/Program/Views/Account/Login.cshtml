@model Program.Models.Account
@using Program.Models;
@{
    ViewBag.Title = "Trang đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Account account = Model;
    if (account == null)
    {
        account = new Account();
    }
}
<link href="~/Content/style/loginstyle.css" rel="stylesheet" />
<section class="vh-100 pd-20-30" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-1-5 mx-1 mx-md-4 mt-4">Login</p>
                                <form id="form-login" class="mx-1 mx-md-4" action="~/account/login" method="post">

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="username" class="input form-control" name="username" placeholder="Input your username" value="@account.username" autofocus="true" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="password" class="input form-control" name="password" placeholder="Input your password" value="@account.password" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="">
                                            <input type="checkbox" id="remember" name="remember" checked="@account.remember" value="true" />
                                            <label for="remember">Duy trì đăng nhập</label>
                                        </div>
                                    </div>

                                    <div class="d-flex mx-4 mb-3 mb-lg-4" style="justify-content: space-evenly;">
                                        <a href="#">
                                            <button onclick="submitForm()"
                                                    type="button" class="btn btn-primary btn-lg" style="background-color:#0D6EFD; border: 0;">
                                                Login
                                            </button>
                                        </a>
                                        <a href="~/Home/Index">
                                            <button type="button" class="btn btn-primary btn-lg" style="background-color:#808080; border: 0;">
                                                Cancel
                                            </button>
                                        </a>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/Content/imgs/img-of-login.jpg"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    li {
        list-style: none;
    }

    #main {
        margin: 0 !important;
    }
</style>


<script>
    function submitForm() {
        document.getElementById('form-login').submit();
    }
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!--Gird Layout-->
    <link href="~/Content/style/grid.css" rel="stylesheet" />

    <!--Boostrap-->
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />

    <!--Awesome-->
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.4.2-web/css/fontawesome.min.css" rel="stylesheet" />

    <!--main style-->
    <link href="~/Content/style/site.css" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!--Template style-->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">

    <!--JQuery-->
    <script src="~/Content/jquery/jquery.js"></script>

    <!-- Libary -->
    <script src="~/Content/script/libary.js"></script>
</head>
<body>
    @using Program.Define;
    @using Program.Models;
    <div id="root" class="toggle-sidebar">
        <!--Header-->
        @RenderPage("~/Views/Shared/parts/_Header.cshtml")
        <!--Side bar-->
        @if (Session[DefineSession.userSession] != null)
        {
            @RenderPage("~/Views/Shared/parts/_Sidebar.cshtml")
        }
        <!--Content-->
        <div id="main" class="grid wide" style="padding-top: 74px; color: rgba(33,37,41,1);">
            @if (ViewBag.pageNow != null)
            {
                LocationPage page = ViewBag.pageNow;
                <div class="pagetitle">
                    <h1 style="color: rgba(33,37,41,1);">@LocationPage.timNodeLa(page).page.name</h1>
                    <nav>
                        <ol class="breadcrumb">
                            @while (page.child != null)
                            {
                                <li class="breadcrumb-item"><a href="@page.page.url">@page.page.name</a></li>
                                page = page.child;
                            }
                            <li class="breadcrumb-item active">@page.page.name</li>
                        </ol>
                    </nav>
                </div><!-- End Page Title -->
            }
            @RenderBody()
        </div>
        <!--Footer-->
        @RenderPage("~/Views/Shared/parts/_Footer.cshtml")
        <!--Back Header-->
    </div>
    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>

    <!-- Ajax -->
    <script src="~/Content/script/ajax.js"></script>

    <!-- js-->
    <script src="~/Content/script/js.js"></script>
</body>
</html>


@model Program.Models.Account
@using Program.Models;
@using Program.Define;
@{
    ViewBag.Title = "Page register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Account account = Model;
    if (account == null)
    {
        account = new Account();
    }
    bool isUsingEmail = account.checkUsingEmail();
    string success = ViewBag.success;
    string error = ViewBag.error;
    ViewBag.pageNow =
        new LocationPage(DefinePage.home,
            new LocationPage(DefinePage.user,
                new LocationPage(DefinePage.user_Register)));
}
<link href="~/Content/style/userstyle.css" rel="stylesheet" />
<section class="vh-100">
    <div class="container" style="margin: 0; max-width: 100%">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12" style="padding: 0">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                @if (!string.IsNullOrEmpty(success))
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        @success
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                                <p class="text-center h1 fw-bold mb-1-5 mx-1 mx-md-4 mt-4">@DefinePage.user_Register.name</p>
                                <form id="form" class="mx-1 mx-md-4" action="~/user/register" method="post">

                                    @if (!string.IsNullOrEmpty(error))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @error
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <div class="d-flex flex-row align-items-center justify-content-around ">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="radio" id="radio-id" style="border-color: #959595" checked="@(!isUsingEmail)" onchange="useId()">
                                            <label class="form-check-label" for="radio-id">
                                                Use your id
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="radio" id="radio-email" style="border-color: #959595" checked="@(isUsingEmail)" onchange="useEmail()">
                                            <label class="form-check-label" for="radio-email">
                                                Use your email
                                            </label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center input-code @(isUsingEmail == !false ? "d-none" : "")">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="code" class="input form-control" name="code" placeholder="Input your id" value="@account.code" />
                                            <p class="text-danger" id="errorCode"></p>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center input-email @(isUsingEmail == !true ? "d-none" : "")">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="email" class="input form-control" name="email" placeholder="Input your email" value="@account.email" />
                                            <p class="text-danger" id="errorEmail"></p>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="username" class="input form-control" name="username" placeholder="Input username" value="@account.username" />
                                            <p class="text-danger" id="errorUsername"></p>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center">
                                        <div class="form-outline flex-fill mb-0">
                                            <span class="input form-control input-password">
                                                <input type="password" show id="password" class="input form-control" name="password" placeholder="Input password" />
                                                <i class="fa-solid fa-eye" onclick="viewPassword()"></i>
                                                <i class="fa-solid fa-eye-slash d-none" onclick="hidePassword()"></i>
                                            </span>
                                            <p class="text-danger" id="errorPassword"></p>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center">
                                        <div class="form-outline flex-fill mb-0">
                                            <span class="input form-control input-password-repeat">
                                                <input type="password" show id="password-repeat" class="input form-control" name="password-repeat" placeholder="Enter password" />
                                                <i class="fa-solid fa-eye" onclick="viewPasswordRepeat()"></i>
                                                <i class="fa-solid fa-eye-slash d-none" onclick="hidePasswordRepeat()"></i>
                                            </span>
                                            <p class="text-danger" id="errorPasswordRepeat"></p>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4 flex-wrap justify-content-between">
                                        <div>
                                            <input type="checkbox" id="accept" name="accept" checked="@account.accept" value="true" onchange="whenAccept()" />
                                            <label for="accept">Đồng ý với <a href="#" class="text-decoration-underline">điều khoản</a> của chúng tôi.</label>
                                        </div>
                                    </div>

                                    <div class="d-flex mx-4 mb-3 mb-lg-4 flex-wrap" style="justify-content: space-evenly;">
                                        <a href="#">
                                            <button onclick="submitForm()"
                                                    type="button" class="btn btn-primary btn-lg" id="btn-res" style="background-color:#0D6EFD; border: 0;" disabled="@(!account.accept)">
                                                Register
                                            </button>
                                        </a>
                                        <a href="~/Home/Index">
                                            <button type="button" class="btn btn-primary btn-lg" style="background-color:#808080; border: 0;">
                                                Cancel
                                            </button>
                                        </a>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4 justify-content-center">
                                        <div class="">
                                            <label for="register">
                                                Bạn đã có tài khoản?
                                                <a href="~/User/Login" class="text-decoration-underline">Đăng nhập</a>
                                            </label>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 img-form">

                                <img src="~/Content/imgs/img-of-login.jpg"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    var code = document.getElementById("code");
    var email = document.getElementById("email");
    var username = document.getElementById("username");
    var password = document.getElementById("password");
    var repeatPassword = document.getElementById("password-repeat");

    var useCode = document.querySelector('#radio-id');
    var errorCode = document.getElementById('errorCode');
    var errorEmail = document.getElementById('errorEmail');
    var errorUsername = document.getElementById("errorUsername");
    var errorPassword = document.getElementById("errorPassword");
    var errorPasswordRepeat = document.getElementById("errorPasswordRepeat");
    code.onkeypress = function () { errorCode.innerText = "" }
    email.onkeypress = function () { errorEmail.innerText = "" }
    username.onkeypress = function () { errorUsername.innerText = "" }
    password.onkeypress = function () { errorPassword.innerText = "" }
    repeatPassword.onkeypress = function () { errorPasswordRepeat.innerText = "" }
    const validateEmail = (email) => {
        return String(email)
            .toLowerCase()
            .match(
                /^(([^<>()[\]\\.,;:\s@@"]+(\.[^<>()[\]\\.,;:\s@@"]+)*)|.(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
    };
    function submitForm() {
        username.value = username.value.trim();
        email.value = email.value.trim();
        code.value = code.value.trim();

        errorUsername.innerHTML = "";
        errorPassword.innerHTML = "";
        errorEmail.innerText = "";
        errorCode.innerText = "";
        errorPasswordRepeat.innerText = "";

        if (username.value.length < 5 || password.value.length < 6 || username.value.indexOf(' ') != -1 ||
            ((code.value.length >= 11 || code.value.length <= 0) && useCode.checked == true) ||
            ((email.value.length <= 0 || validateEmail(email.value) == null) && useCode.checked != true) ||
            (repeatPassword.value != password.value)) {
            if (username.value.length < 5) {
                errorUsername.innerHTML = "Tên đăng nhập phải có từ 5 ký tự trở lên"
            }
            if (password.value.length < 6) {
                errorPassword.innerHTML = "Mật khẩu phải có từ 6 ký tự trở lên";
            }
            if (username.value.indexOf(' ') != -1) {
                errorUsername.innerHTML = "Tên đăng nhập không được chứa ký tự dấu cách"
            }
            if ((code.value.length >= 11 || code.value.length <= 0) && useCode.checked == true) {
                if (code.value.length == 0) {
                    errorCode.innerText = "Mã không được để trống"
                } else {
                    errorCode.innerText = "Mã không được quá 10 ký tự"
                }
            }
            if ((email.value.length <= 0 || validateEmail(email.value) == null) && useCode.checked != true) {
                if (email.value.length == 0) {
                    errorEmail.innerText = "Email không được để trống"
                } else {
                    errorEmail.innerText = "Email không đúng định dạng"
                }
            }
            if (repeatPassword.value != password.value) {
                errorPasswordRepeat.innerText = "Mật khẩu nhập lại phải giống mật khẩu"
            }
            return;
        }
        document.getElementById('form').submit();
    }
    function whenAccept() {
        document.querySelector('#btn-res').disabled = !document.querySelector('#btn-res').disabled;
    }
    function viewPassword() {
        document.getElementById('password').type = 'text';
        document.querySelector('.input-password .fa-solid.fa-eye-slash.d-none').classList.remove('d-none');
        document.querySelector('.input-password .fa-solid.fa-eye').classList.add('d-none');
    }
    function hidePassword() {
        document.getElementById('password').type = 'password';
        document.querySelector('.input-password .fa-solid.fa-eye-slash').classList.add('d-none');
        document.querySelector('.input-password .fa-solid.fa-eye.d-none').classList.remove('d-none');
    }
    function viewPasswordRepeat() {
        document.getElementById('password-repeat').type = 'text';
        document.querySelector('.input-password-repeat .fa-solid.fa-eye-slash.d-none').classList.remove('d-none');
        document.querySelector('.input-password-repeat .fa-solid.fa-eye').classList.add('d-none');
    }
    function hidePasswordRepeat() {
        document.getElementById('password-repeat').type = 'password';
        document.querySelector('.input-password-repeat .fa-solid.fa-eye-slash').classList.add('d-none');
        document.querySelector('.input-password-repeat .fa-solid.fa-eye.d-none').classList.remove('d-none');
    }
    function useId() {
        document.querySelector('.input-code').classList.remove('d-none');
        document.getElementById('code').value = '';
        document.querySelector('.input-email').classList.add('d-none');
        errorCode.innerText = '';
    }
    function useEmail() {
        document.querySelector('.input-email').classList.remove('d-none');
        document.getElementById('email').value = '';
        document.querySelector('.input-code').classList.add('d-none');
        errorEmail.innerText = '';
    }
</script>
